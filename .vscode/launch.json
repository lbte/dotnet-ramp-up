            "program": "${workspaceFolder}/PRFTLatam.EmploymentInfo/PRFTLatam.EmploymentInfo.Infrastructure/bin/Debug/net6.0/PRFTLatam.EmploymentInfo.Infrastructure.dll",
            "args": [],
